{"components/beautify/shop-by-price-horizontal":"{{#if is_ajax}}\r\n    {{#if theme_settings.sidebar_shop_by_brand '==' 9}}\r\n        {{#unless category.faceted_search_enabled}}\r\n            {{#unless category.subcategories}}\r\n                {{assignVar 'hide_sidebar_on_desktop' 1}}\r\n            {{/unless}}\r\n        {{/unless}}\r\n    {{/if}}\r\n{{/if}}\r\n\r\n{{#all (if theme_settings.show_shop_by_price '==' 'slider') shop_by_price (getVar 'hide_sidebar_on_desktop')}}\r\n    <div class=\"beautify__shopByPrice-horizontal u-hideMobile u-hideTablet\" data-beautify-shop-by-price=\"{{JSONstringify shop_by_price}}\">\r\n        <div class=\"form-label\">{{lang 'category.shop_by_price'}}:</div>\r\n        <div class=\"beautify__shopByPrice-slider\" data-slider></div>\r\n        <fieldset class=\"form-fieldset\">\r\n            <div class=\"form-minMaxRow\">\r\n                <div class=\"form-field form-field--input\">\r\n                    <input\r\n                        data-input-min\r\n                        placeholder=\"{{lang 'search.faceted.range.min-placeholder'}}\"\r\n                        min=\"0\"\r\n                        class=\"form-input form-input--small\"\r\n                        type=\"tel\"\r\n                        value=\"\"\r\n                    /><span class=\"_currency\">{{settings.money.currency_token}}</span>\r\n                </div>\r\n                <div class=\"form-field form-field--input\">\r\n                    <input\r\n                        data-input-max\r\n                        placeholder=\"{{lang 'search.faceted.range.max-placeholder'}}\"\r\n                        min=\"0\"\r\n                        class=\"form-input form-input--small\"\r\n                        type=\"tel\"\r\n                        value=\"\"\r\n                    /><span class=\"_currency\">{{settings.money.currency_token}}</span>\r\n                </div>\r\n            </div>\r\n        </fieldset>\r\n        <div class=\"_actions\">\r\n            <button class=\"_action\" data-cancel style=\"display:none\">{{lang 'common.cancel'}}</button>\r\n            <a href=\"{{category_url}}\" class=\"_action\" data-clear style=\"display:none\">{{lang 'search.faceted.clear'}}</a>\r\n            <button class=\"_action\" data-apply>{{lang 'search.faceted.range.update'}}</button>\r\n        </div>\r\n    </div>\r\n{{/all}}\r\n"}
